{
  "sbg:id": "rkmh classify",
  "id": "#rkmh_classify",
  "inputs": [
    {
      "type": ["null", "File"],
      "label": "references",
      "description": "A file containing reference genomes in fasta format",
      "streamable": false,
      "default": "",
      "id": "#references",
      "inputBinding": {
        "position": 0,
        "prefix": "-r",
        "separate": true,
        "sbg:cmdInclude": true
      },
      "required": false
    },
    {
      "type": ["null", "File"],
      "label": "fasta",
      "description": "A fasta files containing reads",
      "streamable": false,
      "default": "",
      "id": "#fasta",
      "inputBinding": {
        "position": 0,
        "prefix": "-f",
        "separate": true,
        "sbg:cmdInclude": true
      },
      "required": false
    },
    {
      "type": ["null", "int"],
      "label": "kmer size",
      "description": "The kmer size to use for hashing",
      "streamable": false,
      "default": "",
      "id": "#kmer_size",
      "inputBinding": {
        "position": 0,
        "prefix": "-k",
        "separate": true,
        "sbg:cmdInclude": true
      },
      "required": false
    },
    {
      "type": ["null", "int"],
      "label": "sketch size",
      "description": "The number of hashes to use for comparison",
      "streamable": false,
      "default": "",
      "id": "#sketch_size",
      "inputBinding": {
        "position": 0,
        "prefix": "-s",
        "separate": true,
        "sbg:cmdInclude": true
      },
      "required": false
    },
    {
      "type": ["null", "int"],
      "label": "Minimum Kmer Occcurence",
      "description": "Filter kmers that occur fewer than N times.",
      "streamable": false,
      "default": "",
      "id": "#min_kmer_occ",
      "inputBinding": {
        "position": 0,
        "prefix": "-M",
        "separate": true,
        "sbg:cmdInclude": true
      },
      "required": false
    }
  ],
  "outputs": [
    {
      "type": ["null", "File"],
      "label": "classify results",
      "description": "the output of rkmh classify",
      "streamable": false,
      "default": "",
      "id": "#classify_results",
      "outputBinding": {
        "glob": {
          "engine": "#cwl-js-engine",
          "script": "\"*.txt\"",
          "class": "Expression"
        },
        "sbg:inheritMetadataFrom": "#fasta",
        "sbg:metadata": {
          "from_tool": "rkmh_classify"
        }
      }
    },
    {
      "type": ["null", "File"],
      "label": "std_out",
      "description": "standard output",
      "streamable": false,
      "default": "",
      "id": "#std_out",
      "outputBinding": {
        "glob": "\"std.out\"",
        "sbg:metadata": {
          "from_tool": "rkmh_classify"
        }
      }
    }
  ],
  "requirements": [],
  "hints": [
    {
      "class": "DockerRequirement",
      "dockerPull": "cgrlab/rkmh:latest"
    },
    {
      "class": "sbg:CPURequirement",
      "value": 1
    },
    {
      "class": "sbg:MemRequirement",
      "value": 1000
    }
  ],
  "label": "rkmh classify",
  "class": "CommandLineTool",
  "baseCommand": [
    "rkmh classify"
  ],
  "arguments": [
    {
      "position": 101,
      "prefix": ">",
      "separate": true,
      "valueFrom": {
        "engine": "#cwl-js-engine",
        "script": "{return $job.inputs.fasta.name + \".rkmh_classify.txt\"}",
        "class": "Expression"
      }
    },
    {
      "position": 102,
      "separate": true,
      "valueFrom": {
        "engine": "#cwl-js-engine",
        "script": "\"&& ls -lhrt\"",
        "class": "Expression"
      }
    }
  ],
  "stdout": "std.out"
}
